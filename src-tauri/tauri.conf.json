{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "intune-packager",
  "version": "0.1.0",
  "identifier": "com.jacktench.intunepackager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "intune-packager",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": ["icons/32x32.png", "icons/icon.ico"]
  }
}
